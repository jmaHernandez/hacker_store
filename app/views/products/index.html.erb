<div class="page-header">
  <h1>Products</h1>
</div>

<% if user_signed_in? %>
  <p>
    <%= link_to 'New Product', new_product_path, :class => 'btn btn-primary' %>
  </p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td>
          <% if user_signed_in? %>
            <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-xs btn-warning' %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
