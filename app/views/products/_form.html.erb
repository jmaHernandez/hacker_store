<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= f.label :name, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
</div>
<%=f.error_span(:name) %>
 
<div class="form-group">
  <%= f.label :price, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :price, :class => 'form-control' %>
  </div>
</div>
<%=f.error_span(:price) %>

<div class="form-group">
  <%= f.label :status, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.select :status, options_for_select(['active', 'inactive'], :selected => f.object.status), { include_blank: 'Select something' } , { class: 'form-control' } %>
  </div>
</div>
<%=f.error_span(:status) %>
