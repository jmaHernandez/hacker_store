<div class="page-header">
  <h1>New Line Item</h1>
</div>

<%= form_for [@user, @order, @line_item], html: { class: "form-horizontal generation" } do |f| %>
	<%= render 'form', f: f %>

	<div class="form-group">
		<div class="col-lg-offset-2 col-lg-10">
			<%= f.submit "Save", class: 'btn btn-primary' %>
			<%= link_to "Cancel",  user_order_line_items_path(@user, @order), class: 'btn btn-default' %>
		</div>
	</div>
<% end %>
