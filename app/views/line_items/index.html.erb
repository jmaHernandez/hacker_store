<div class="page-header">
	<h1>Line Items</h1>
</div>

<p>
	<%= link_to 'New Line Item', new_user_order_line_item_path(@user, @order), :class => 'btn btn-primary' %>  
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Orden Name</th>
			<th>Product Name</th>
			<th>Quantity</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @line_items.each do |line_item| %>
			<tr>
				<td><%= line_item.order.name %></td>
				<td><%= line_item.product.name %></td>
				<td><%= line_item.quantity %></td>
				<td>
					<%= link_to 'Edit', edit_user_order_line_item_path(@user, @order, line_item), :class => 'btn btn-xs btn-warning' %>
					<%= link_to 'Delete', user_order_line_item_path(@user, @order, line_item), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-xs btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>